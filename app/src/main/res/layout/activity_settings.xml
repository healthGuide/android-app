<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/settingsview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rkapoors.healthguide.settings"
    android:background="@drawable/recimg">

    <RelativeLayout
        android:id="@+id/infoview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/recimg">

        <ImageView
            android:id="@+id/userimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="2dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boy"
            />

        <TextView
            android:id="@+id/usernaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userimg"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingTop="2dp"
            android:text="User"/>

        <TextView
            android:id="@+id/usermail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernaam"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#000"
            android:paddingTop="2dp"
            android:text="Email"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:layout_below="@+id/infoview">

        <TextView
            android:id="@+id/infotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:padding="5dp"
            android:text="ACCOUNT"
            />

        <ListView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infotxt"
            android:choiceMode="singleChoice"
            android:background="#ffffff"
            android:divider="#a0a0a0"
            android:dividerHeight="2dp"
            />

        <TextView
            android:id="@+id/sharetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list"
            android:textColor="#000"
            android:padding="5dp"
            android:text="SHARE"
            />

        <ListView
            android:id="@+id/list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sharetxt"
            android:choiceMode="singleChoice"
            android:background="#ffffff"
            android:divider="#a0a0a0"
            android:dividerHeight="2dp"
            />

        <TextView
            android:id="@+id/memberstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list1"
            android:textColor="#000"
            android:padding="5dp"
            android:text="EMERGENCY"
            />

        <ListView
            android:id="@+id/list2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memberstxt"
            android:choiceMode="singleChoice"
            android:background="#ffffff"
            android:divider="#a0a0a0"
            android:dividerHeight="2dp"
            />

    </RelativeLayout>

</RelativeLayout>