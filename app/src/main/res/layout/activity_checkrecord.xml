<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rellayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recimg">

    <TextView
        android:id="@+id/ftv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From: "
        android:textColor="#f00"
        android:layout_alignParentStart="true"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fttv"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_toEndOf="@+id/ftv"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/ttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   To: "
        android:textColor="#f00"
        android:layout_toEndOf="@+id/fttv"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tttv"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_toEndOf="@+id/ttv"
        android:padding="2dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh..."
        android:id="@+id/fetchbt"
        android:textAllCaps="false"
        android:background="#efefef"
        android:layout_below="@+id/ftv"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fetchbt"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/grbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/graphimg"
        android:background="#000"/>
</RelativeLayout>