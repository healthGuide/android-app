<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/rwview"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/recimg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:text="0"/>

        <TextView
            android:id="@+id/bronzetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked.\nscore 30 to unlock."
            android:layout_alignStart="@+id/bronze"
            android:layout_alignEnd="@+id/bronze"
            android:layout_below="@+id/counter"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <ImageView
            android:id="@+id/bronze"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/counter"
            android:layout_centerHorizontal="true"
            android:alpha="0.3"
            android:layout_marginTop="30dp"
            android:src="@drawable/bronze"/>

        <TextView
            android:id="@+id/silvertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked.\nscore 45 to unlock."
            android:layout_alignStart="@+id/silver"
            android:textAlignment="center"
            android:layout_alignEnd="@+id/silver"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/bronze"
            android:textColor="#000"
            />

        <ImageView
            android:id="@+id/silver"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/bronze"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:alpha="0.3"
            android:src="@drawable/silver"/>

        <TextView
            android:id="@+id/goldtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked\nscore 60 to unlock."
            android:layout_alignStart="@+id/gold"
            android:textAlignment="center"
            android:layout_alignEnd="@+id/gold"
            android:layout_below="@+id/silver"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <ImageView
            android:id="@+id/gold"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/silver"
            android:layout_marginTop="30dp"
            android:alpha="0.3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gold"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/refreshbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#000"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/refresh"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/infobt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/refreshbt"
            android:layout_margin="@dimen/fab_margin"
            android:background="#000"
            android:src="@drawable/infoimg"/>

    </RelativeLayout>

</ScrollView>
