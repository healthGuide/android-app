<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardUseCompatPadding="true"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/clip"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/dttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:text="time: "
                android:layout_below="@+id/dttv"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tmtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:layout_toEndOf="@+id/tm"
                android:layout_below="@+id/dttv"
                />

            <TextView
                android:id="@+id/cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:text="comment: "
                android:layout_below="@+id/tm"/>

            <TextView
                android:id="@+id/cmtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:layout_toEndOf="@+id/cm"
                android:layout_below="@+id/tm"
                />

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:text="insulin dosage: "
                android:layout_below="@+id/cm"/>

            <TextView
                android:id="@+id/othercmtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/other"
                android:layout_below="@+id/cm"
                />

            <TextView
                android:id="@+id/unittv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="1dp"
                android:text=" units"
                android:layout_toEndOf="@+id/othercmtv"
                android:layout_below="@+id/cm"
                />

            <TextView
                android:id="@+id/gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="1dp"
                android:text="sugar level: "
                android:layout_below="@+id/other"/>

            <TextView
                android:id="@+id/grtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="1dp"
                android:layout_toEndOf="@+id/gr"
                android:layout_below="@+id/other"
                />

            <TextView
                android:id="@+id/unittv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="1dp"
                android:text=" mg/dL"
                android:layout_toEndOf="@+id/grtv"
                android:layout_below="@+id/other"
                />
        </RelativeLayout>
</android.support.v7.widget.CardView>